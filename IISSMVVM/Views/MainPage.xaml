                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--***LEFT SIDE***-->
                <!--TEXTBLOCK STATUS-->
                <Viewbox Grid.Column="0" 
                     Grid.Row="2"
                     Margin="20,0"
                     Grid.ColumnSpan="4">
                    <TextBlock x:Name="ScanModeTxt"
                           Style="{StaticResource ScanModeTextStyle}"/>
                </Viewbox>
                <!--TEXTBLOCK DANGER-->
                <Viewbox Grid.Column="0" 
                     Grid.Row="4"
                     Margin="20,0"
                     Grid.ColumnSpan="3">
                    <TextBlock x:Name="tbDanger"
                           Style="{StaticResource PriorityTextBlockStyle}"/>
                </Viewbox>
                <!--Imagen Danger-->
                <Viewbox Grid.Column="0" 
                     Grid.Row="5"
                     Margin="20,0"
                     Grid.ColumnSpan="4">
                    <Image x:Name="imgDanger1" Style="{StaticResource ImageDangerLevelStyle1}"></Image>
                </Viewbox>
                <Viewbox Grid.Column="0" 
                     Grid.Row="5"
                     Margin="20,0"
                     Grid.ColumnSpan="4">
                    <Image x:Name="imgDanger2" Style="{StaticResource ImageDangerLevelStyle2}"></Image>
                </Viewbox>
                <Viewbox Grid.Column="0" 
                     Grid.Row="5"
                     Margin="20,0"
                     Grid.ColumnSpan="4">
                    <Image x:Name="imgDanger3" Style="{StaticResource ImageDangerLevelStyle3}"></Image>
                </Viewbox>
                <!--Mapa-->
                <Viewbox Grid.Column="0" 
                     Grid.Row="7"
                     Grid.ColumnSpan="4"
                     Grid.RowSpan="5"
                     Style="{StaticResource MapViewBoxStyle}">
                    <maps:MapControl x:Name="MyMap" 
                                 Loaded="MyMap_OnLoaded" 
                                 Width="100" Height="100" 
                                 VerticalContentAlignment="Stretch" 
                                 HorizontalContentAlignment="Stretch" 
                                 Visibility="Collapsed"/>
                </Viewbox>
                <!--***LEFT SIDE***-->
                <!--***RIGHT SIDE***-->
                <!--TEXTBLOCK's LOCATION-->
                <!--TEXTBLOCK LOCTION-->
                <Viewbox Grid.Column="19" 
                     Grid.Row="2"
                     Grid.ColumnSpan="2"
                     Margin="0,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbLocation"
                           Text="Location:" 
                           Visibility="Visible"
                           Style="{StaticResource RightTextBoxStyle}"/>
                </Viewbox>
                <!--TEXTBLOCK COORDINATAES-->
                <Viewbox Grid.Column="17" 
                     Grid.Row="3"
                     Grid.ColumnSpan="4"
                     Margin="0,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbCoordinates"
                           Style="{StaticResource RightTextBoxStyle}" />
                </Viewbox>
                <!--TEXTBLOCK STREET-->
                <Viewbox Grid.Column="17" 
                     Grid.Row="4"
                     Grid.ColumnSpan="4"
                     Margin="0,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbStreet"
                           Style="{StaticResource RightTextBoxStyle}" />
                </Viewbox>
                <!--TEXTBLOCK TOWN-->
                <Viewbox Grid.Column="17" 
                     Grid.Row="5"
                     Grid.ColumnSpan="4"
                     Margin="20,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbTown"
                           Style="{StaticResource RightTextBoxStyle}" />
                </Viewbox>
                <!--TEXTBLOCK COUNTRY-->
                <Viewbox Grid.Column="17" 
                     Grid.Row="6"
                     Margin="20,0"
                     Grid.ColumnSpan="4"
                     Grid.RowSpan="2"
                     VerticalAlignment="Top">
                    <TextBlock x:Name="tbCountry"
                           Style="{StaticResource RightTextBoxStyle}" />
                </Viewbox>
                <!--**TEXTBLOCK's SUBJECT INFO**-->
                <Viewbox Grid.Column="18" 
                     Grid.Row="8"
                     Grid.ColumnSpan="4"
                     Margin="0,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbSubjectInfo"
                           Text="Subject info:" 
                           Visibility="Visible"
                           Style="{StaticResource RightTextBoxStyle}"/>
                </Viewbox>
                <!--TEXTBLOCK NAME-->
                <Viewbox Grid.Column="17" 
                     Grid.Row="9"
                     Grid.ColumnSpan="4"
                     Margin="0,0,20,0">
                    <TextBlock x:Name="tbName"
                               Text="Jorge Perales Diaz"
                           Style="{StaticResource RightTextBoxStyle}"/>
                </Viewbox>
                <!--TEXTBLOCK Age-->
                <Viewbox Grid.Column="19" 
                     Grid.Row="10"
                     Grid.ColumnSpan="1"
                     Margin="0,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbAge"
                           Style="{StaticResource RightTextBoxStyle}"/>
                </Viewbox>
                <!--TEXTBLOCK Description-->
                <Viewbox Grid.Column="15" 
                     Grid.Row="11"
                     Grid.ColumnSpan="6"
                     Margin="45,0,20,0"
                     HorizontalAlignment="Right">
                    <TextBlock x:Name="tbDescription"
                           Style="{StaticResource RightTextBoxStyle}"
                           Text=""/>
                </Viewbox>
